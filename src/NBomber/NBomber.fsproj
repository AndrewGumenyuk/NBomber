<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>0.2.2</Version>
    <Company>VIP-Logic</Company>
    <Authors>AntyaDev, alkondrashov</Authors>
    <Description>Very simple load testing framework for Request-response and Pub/Sub scenarios. It's 100% written in F# and targeting .NET Core and full .NET Framework.</Description>
    <PackageLicenseUrl>https://github.com/VIP-Logic/NBomber/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/VIP-Logic/NBomber</PackageProjectUrl>
    <RepositoryUrl>https://github.com/VIP-Logic/NBomber</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags>load-testing, performance-testing, integration-testing, fsharp</PackageTags>
    <Copyright>VIP-Logic@2018</Copyright>
    <PackageId>VIP-Logic.NBomber</PackageId>
  </PropertyGroup>
  <ItemGroup>    
    <Compile Include="AssemblyInfo.fs" />    
    <Compile Include="Domain\Errors.fs" />    
    <Compile Include="Domain\Scenario.fs" />    
    <Compile Include="Domain\Reporting.fs" />    
    <Compile Include="Domain\Assertions.fs" />
    <Compile Include="Api\CSharp.fs" />
    <Compile Include="Api\FSharp.fs" />
    <Compile Include="FlowRunner.fs" />
    <Compile Include="ScenarioRunner.fs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="HdrHistogram" Version="2.5.0" />
    <PackageReference Include="Serilog" Version="2.7.1" />
    <PackageReference Include="Serilog.Sinks.ColoredConsole" Version="3.0.1" />
    <PackageReference Include="TaskBuilder.fs" Version="2.0.0" />
    <PackageReference Include="ConsoleTables" Version="2.2.0" />
  </ItemGroup>
</Project>